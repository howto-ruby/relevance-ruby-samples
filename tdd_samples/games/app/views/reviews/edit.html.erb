<h1>Editing review</h1>

<% form_for(@review) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :stars %><br />
    <%= f.text_field :stars %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.select :user_id, 
                 options_from_collection_for_select(User.all, :id, :name, f.object.user_id), 
                 :include_blank => true %>
  </p>
  <p>
    <%= f.label :game %><br />
    <%= f.select :game_id, 
                 options_from_collection_for_select(Game.all, :id, :name, f.object.game_id), 
                 :include_blank => true %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @review %> |
<%= link_to 'Back', reviews_path %>