<h1>Editing post</h1>

<%# codecite builder option %>
<% form_for @post, :builder => LabelledFormBuilder do |f| %>
  <%# codecite builder option %>
  <%= f.error_messages %>

  <%# codecite fields %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.check_box :published %>
  <%# codecite fields %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

